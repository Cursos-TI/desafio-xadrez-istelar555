#include <stdio.h>

// Simula o movimento da Torre utilizando a estrutura de repetição 'for'
// A torre se move 5 casas para a direita
void moverTorre() {
    printf("Movimento da Torre (5 casas para a Direita):\n");
    for (int i = 0; i < 5; i++) {
        printf("Direita\n");
    }
}

// Simula o movimento do Bispo utilizando a estrutura de repetição 'while'
// O bispo se move 5 casas na diagonal (Cima, Direita)
void moverBispo() {
    printf("\nMovimento do Bispo (5 casas na Diagonal Direita-Cima):\n");
    int i = 0;
    while (i < 5) {
        printf("Cima Direita\n");
        i++;
    }
}

// Simula o movimento da Rainha utilizando a estrutura de repetição 'do-while'
// A rainha se move 8 casas para a esquerda
void moverRainha() {
    printf("\nMovimento da Rainha (8 casas para a Esquerda):\n");
    int i = 0;
    do {
        printf("Esquerda\n");
        i++;
    } while (i < 8);
}

// Função principal do programa
int main() {
    // Chamada das funções de movimentação
    moverTorre();
    moverBispo();
    moverRainha();

    return 0;
}
